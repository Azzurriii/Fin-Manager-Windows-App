<Page
    x:Class="Fin_Manager_v2.Views.AnalysisPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea" Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Controls Section -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <CalendarDatePicker 
                Grid.Column="0"
                Header="Start Date"
                Margin="5"
                Date="{x:Bind ViewModel.StartDate, Mode=TwoWay}"/>

            <CalendarDatePicker 
                Grid.Column="1"
                Header="End Date"
                Margin="5"
                Date="{x:Bind ViewModel.EndDate, Mode=TwoWay}"/>

            <ComboBox 
                Grid.Column="2"
                Header="Account"
                Margin="5"
                ItemsSource="{x:Bind ViewModel.Accounts, Mode=OneWay}"
                SelectedItem="{x:Bind ViewModel.SelectedAccountObj, Mode=TwoWay}"
                DisplayMemberPath="AccountName"/>

            <Button 
                Grid.Column="3"
                Content="Analyze"
                Style="{StaticResource AccentButtonStyle}"
                Command="{x:Bind ViewModel.AnalyzeCommand}"
                VerticalAlignment="Bottom"
                Margin="5"/>
        </Grid>

        <!-- Time Period Info -->
        <TextBlock Grid.Row="1" 
                   Margin="5,0,5,20"
                   Style="{StaticResource SubtitleTextBlockStyle}">
            <Run Text="Analysis Period: "/>
            <Run Text="{x:Bind ViewModel.DurationInDays, Mode=OneWay}"/>
            <Run Text=" days"/>
        </TextBlock>

        <!-- Summary Cards -->
        <Grid Grid.Row="2" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Income Card -->
            <Grid Grid.Column="0" 
                  Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                  Margin="5"
                  Padding="15"
                  CornerRadius="8"
                  BorderThickness="1"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                <StackPanel>
                    <TextBlock Text="Income" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <TextBlock Text="{x:Bind ViewModel.TotalIncome, Mode=OneWay}" 
                             Style="{StaticResource TitleTextBlockStyle}"
                             Foreground="Green"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="{x:Bind ViewModel.IncomeChangeAmount, Mode=OneWay}"/>
                        <TextBlock Text="{x:Bind ViewModel.IncomeChangePercentage, Mode=OneWay}" 
                                 Margin="5,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <!-- Expense Card -->
            <Grid Grid.Column="1" 
                  Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                  Margin="5"
                  Padding="15"
                  CornerRadius="8"
                  BorderThickness="1"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                <StackPanel>
                    <TextBlock Text="Expense" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <TextBlock Text="{x:Bind ViewModel.TotalExpense, Mode=OneWay}" 
                             Style="{StaticResource TitleTextBlockStyle}"
                             Foreground="Red"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="{x:Bind ViewModel.ExpenseChangeAmount, Mode=OneWay}"/>
                        <TextBlock Text="{x:Bind ViewModel.ExpenseChangePercentage, Mode=OneWay}" 
                                 Margin="5,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <!-- Net Change Card -->
            <Grid Grid.Column="2" 
                  Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                  Margin="5"
                  Padding="15"
                  CornerRadius="8"
                  BorderThickness="1"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                <StackPanel>
                    <TextBlock Text="Net Change" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <TextBlock Text="{x:Bind ViewModel.NetChange, Mode=OneWay}" 
                             Style="{StaticResource TitleTextBlockStyle}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="{x:Bind ViewModel.NetChangeAmount, Mode=OneWay}"/>
                        <TextBlock Text="{x:Bind ViewModel.NetChangePercentage, Mode=OneWay}" 
                                 Margin="5,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Top Categories -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Top Expense Category -->
            <Grid Grid.Column="0" 
                  Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                  Margin="5"
                  Padding="15"
                  CornerRadius="8"
                  BorderThickness="1"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                <StackPanel>
                    <TextBlock Text="Top Expense Category" 
                              Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <TextBlock Text="{x:Bind ViewModel.MostExpensiveCategory, Mode=OneWay}"
                              Style="{StaticResource BodyTextBlockStyle}"
                              Margin="0,5,0,0"/>
                    <TextBlock Text="{x:Bind ViewModel.MostExpensiveAmount, Mode=OneWay}"
                              Style="{StaticResource TitleTextBlockStyle}"
                              Foreground="Red"/>
                </StackPanel>
            </Grid>

            <!-- Top Income Category -->
            <Grid Grid.Column="1" 
                  Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                  Margin="5"
                  Padding="15"
                  CornerRadius="8"
                  BorderThickness="1"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                <StackPanel>
                    <TextBlock Text="Top Income Category" 
                              Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <TextBlock Text="{x:Bind ViewModel.MostIncomeCategory, Mode=OneWay}"
                              Style="{StaticResource BodyTextBlockStyle}"
                              Margin="0,5,0,0"/>
                    <TextBlock Text="{x:Bind ViewModel.MostIncomeAmount, Mode=OneWay}"
                              Style="{StaticResource TitleTextBlockStyle}"
                              Foreground="Green"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
